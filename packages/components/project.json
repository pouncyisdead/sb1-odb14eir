{
  "name": "components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/components/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nxext/stencil:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "projectType": "library",
        "outputPath": "dist/packages/components",
        "configPath": "packages/components/stencil.config.ts",
        "tsConfig": "packages/components/tsconfig.lib.json"
      }
    },
    "test": {
      "executor": "@nxext/stencil:test",
      "outputs": ["{options.coverageDirectory}"],
      "options": {
        "projectType": "library",
        "configPath": "packages/components/stencil.config.ts",
        "tsConfig": "packages/components/tsconfig.spec.json"
      }
    },
    "e2e": {
      "executor": "@nx/playwright:playwright",
      "outputs": ["{workspaceRoot}/dist/.playwright/packages/components"],
      "options": {
        "config": "packages/components/playwright.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/components/**/*.{ts,tsx}"]
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "packages/components/.storybook"
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/components",
        "configDir": "packages/components/.storybook"
      }
    }
  },
  "tags": ["scope:components"]
}