{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "declaration": true,
    "composite": true,
    "resolveJsonModule": true
  },
  "exclude": ["src/**/*.spec.ts", "src/**/*.e2e.ts", "src/**/*.test.ts"],
  "include": [
    "src/**/*.stories.ts",
    "src/**/*.stories.js",
    "src/**/*.stories.jsx",
    "src/**/*.stories.tsx",
    "src/**/*.stories.mdx",
    ".storybook/*.js",
    ".storybook/*.ts",
    "../../dist/tools/config-stories/"
  ]
}
